<head>
  <!-- Include Bootstrap and HTML Kickstart (for style) -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
  <link rel="stylesheet" href="/assets/kickstart.css" media="all" /> <!-- KICKSTART -->
</head>

<body>
  <form>
    <div class="container">
      <div class="row" style="text-align:center">
        <div class="col-md-12" style="margin-bottom:5px">
          <h2>Sign up</h2>
        </div>
      </div>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
    
      <div class="row">
        <div class="col-md-6 left-col form-group">
          <div class="field padded">
            <label>First name:</label>
            <%= f.text_field :firstname, size: "20" %>
          </div>
          
          <div class="field padded">
            <label>Last name:</label>
            <%= f.text_field :lastname, size: "20" %>
          </div>
          
          <div class="field padded">
            <label>Date of birth:</label>
            <%= date_select :user, :dob, :start_year => 1900, :end_year => 2017, :use_month_numbers => true, :order => [:month, :day, :year] %>
          </div>
          
          <div class="field">
            <label>Phone:</label>
            <%= f.text_field :phone, :id => "phone", placeholder: "(___) ___-____", size: "13" %>
          </div>
          <input type="checkbox" id="textable" checked="true"/>
          <label for="textable" class="inline" style="font-size:16px">This phone is capable<br/>of receiving texts.</label><br/><br/>
        
          <div class="field padded">
            <label>Email:</label>
            <%= f.email_field :email, placeholder: "(this will be your username)", size: "32" %>
          </div>
        
          <div class="field padded">
            <label>Password:</label>
            <%= f.password_field :password, autocomplete: "off", placeholder: "(6 characters minimum)", size: "24" %>
          </div>
        
          <div class="field padded">
            <label>Confirm password:</label>
            <%= f.password_field :password_confirmation, autocomplete: "off", size: "24" %>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="right-col form-group">
            <fieldset>
              <legend>Interests</legend>
              <table style="line-height:20px">
                <tr>
                  <div style="text-align:left">
                    <td>
                    	<input type="checkbox" id="dogs" onclick="toggleCheckboxes('dogs')" />
                      <label for="dogs" class="inline">Dogs</label>
                    </td>
                    <td>
                      <input type="checkbox" id="dogwalker" name="dogs" disabled="true"/>
                      <label for="dogwalker" class="inline faded" name="dogs">Walking</label><br/>
                      
                      <input type="checkbox" id="dogfeeder" name="dogs"  disabled="true"/>
                      <label for="dogfeeder" class="inline faded" name="dogs">Feeding</label><br/>
                      
                      <input type="checkbox" id="dogplayer" name="dogs" disabled="true" />
                      <label for="dogplayer" class="inline faded" name="dogs">Playing</label><br/>
                      
                      <input type="checkbox" id="doggroomer" name="dogs" disabled="true" />
                      <label for="doggroomer" class="inline faded" name="dogs">Grooming</label><br/>
                      
                      <input type="checkbox" id="dogcleaner" name="dogs" disabled="true" />
                      <label for="dogcleaner" class="inline faded" name="dogs">Cleaning</label><br/>
                    </td>
                  </div>
                </tr>
                <tr>
                  <td>
                    <input type="checkbox" id="cats"  onclick="toggleCheckboxes('cats')" />
                    <label for="cats" class="inline">Cats</label>
                  </td>
                  <td>
                    <input type="checkbox" id="catfeeder" name="cats" disabled="true"/>
                    <label for="catfeeder" class="inline faded" name="cats" >Feeding</label><br/>
                    
                    <input type="checkbox" id="catplayer" name="cats" disabled="true" />
                    <label for="catplayer" class="inline faded" name="cats" >Playing</label><br/>
                    
                    <input type="checkbox" id="catcleaner" name="cats" disabled="true" />
                    <label for="catcleaner" class="inline faded" name="cats" >Cleaning</label><br/>
                  </td>
                </tr>
                <tr>
                  <td>
                  </td>
                  <td>
                    <input type="checkbox" id="baker" />
                    <label for="baker" class="inline">Cooking/baking</label><br/>
                    
                    <input type="checkbox" id="organizer" />
                    <label for="organizer" class="inline">Organizing events</label><br/>
                    
                    <input type="checkbox" id="fundraiser" />
                    <label for="fundraiser" class="inline">Fundraising</label><br/>
                    
                    <input type="checkbox" id="maintainer" />
                    <label for="maintainer" class="inline">Machine maintenance</label><br/>
                    
                    <input type="checkbox" id="othercheck" name="other"/>
                    <input id="otherbox" class="inline" placeholder="Other..." type="text" size="13" style="height:25px; font-size:17px" onclick="toggleOther('other')"/>
                  
                    <!-- An alternative way to put checkboxes on lines with labels:
                    <label>
                      <%#= f.check_box :interests %> Dogs
                    </label>
                    -->
                  </td>
                </tr>
              </table>
            </fieldset>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-12" style="text-align:center">
          <div class="actions" style="margin-bottom:20px; margin-top:-10px">
            <button class="large green">Volunteer</button>
            <%#= f.submit "Volunteer", style: "font-size:25px" %>
          </div>
        
          <% end %>
      
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </form>
  
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>

  <!-- Include jQuery and MaskedInput (for formatting phone numbers) -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script src="/assets/kickstart.js"></script> <!-- KICKSTART -->
  <script src="/assets/jquery.maskedinput.js" type="text/javascript"></script>
  <script>
    jQuery(function($){
        $("#phone").mask("(999) 999-9999");
    });
  </script>
  
  <!-- toggleCheckboxes function to toggle dog/cat sections -->
  <script>
  function toggleCheckboxes(name) {
      var elems = document.getElementsByName(name);
      for(i=0; i<elems.length; i++) {
          elems[i].disabled = !elems[i].disabled;
          if (elems[i].className == "inline faded") {
            elems[i].setAttribute("class", "inline")
          }
          else {
            elems[i].setAttribute("class", "inline faded")
          }
      }
  }
  </script>
  
  <script>
    function toggleOther(name) {
      var elems = document.getElementsByName(name);
      for (i=0; i<elems.length; i++) {
          elems[i].checked = "true";
        }
    }
  </script>

</body>